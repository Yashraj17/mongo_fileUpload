doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title album 
    body 
        .container 
            h1 Image uploading with mongodb and express 
        .container 
            .row 
                .col-4
                    .card 
                        .card-body 
                            form(action="/upload",method="post", enctype="multipart/form-data")
                                .mb-3 
                                    label(for="") file 
                                    input.form-control(type="file", name="file")#input_file
                                .mb-3
                                    input(type="submit").btn.btn-success
            .row 
                each value in data
                    .col-3
                        .card.mb-3 
                            img(src=`http://localhost:8081/files/${value.name}`, alt="",style="object-fit:cover;height:200px;").w-100
